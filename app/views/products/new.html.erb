<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_for @product, url:products_path do |f| %>
	    <div class="form-group">
        <%= f.label :image , '商品画像' %>

        <div id="img_field" onClick="$('#file').click()" >

          <% if @product.image? %>
            <%= image_tag @product.image.url, :size => '180x180' %>
          <% else %>
            <!-- <i class="fas fa-image"></i> -->
            <!-- <i class="fas fa-file-upload add"></i> -->
          <% end %>
        </div>
        <%= f.file_field :image, class: "image", style: "display:none;", id: "file"%>
      </div>

      <div class="form-group">
      <%= f.label :title, '教科書名' %>
      <%= f.text_area :title, class:'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :price, '値段' %>
      <%= f.text_area :price, class:'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :lecture, '講義名' %>
      <%= f.text_area :lecture, class:'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :university, '学部名' %>
      <%= f.text_area :university, class:'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :place, '受け渡し場所' %>
      <%= f.text_area :place, class:'form-control' %>
      </div>

      <div class="form-group">
      <%=f.label :writing, '書き込み' %>
      <%= f.text_area :writing, class:'form-control' %>
      </div>

      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>

    <% end %>
  </div>
</div>

<ul class="list-unstyled">
  <% if microposts.present? %>
    <% microposts.each do |micropost| %>
      <div class="microposts-line">
        <li class="media mb-3">
          <div class="twitter-user">
            <% if micropost.user.image.url present? %>
              <%= image_tag(micropost.user.image.url,class:'user-image',width: '100px')%>
            <% else %>
            <%= image_tag "/assets/user.jpg",class:'user-image',width: '100px' %>
            <% end %>
          </div>
          <div class="twitter-body">
          <div>
            <%= link_to micropost.user.name, user_path(micropost.user) %>
              <span class="text-muted">　posted at
                <%= micropost.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
              </span>
          </div>
          <div>
            <p><%= micropost.content %></p>
          </div>
          <div>
            <% if current_user == micropost.user %>
              <%= link_to "削除", micropost, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </li>
      </div>
    <% end %>
  <% end %>
</ul>
